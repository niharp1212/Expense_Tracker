@model Expense.Models.Category
@{
    ViewBag.Title = "EditCategory";
}

<h2>EditCategory</h2>


@using (Html.BeginForm("EditCategory", "Expense", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(h => h.CategoryId)
            <label>Name</label>
            @Html.ValidationMessageFor(h => h.CategoryName, "", new { @class = "error" })
            @Html.TextBoxFor(h => h.CategoryName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Expanse_Limit</label>
            @Html.ValidationMessageFor(h => h.Cexpense_limit, "", new { @class = "error" })
            @Html.TextBoxFor(h => h.Cexpense_limit, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
}



