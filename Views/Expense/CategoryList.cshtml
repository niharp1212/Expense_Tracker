@model List<Expense.Models.Category>
@{
    ViewBag.Title = "CategoryList";
}

<h2 class="text-center">CategoryList</h2>


@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong>@TempData["msg"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

@if (TempData["denger"] != null)
{
    <div class="alert alert-denger">
        <strong>Success !</strong>@TempData["denger"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}


<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Category Name</th>
            <th>Expanse Limit</th>
            <th>Action</th>
        </tr>
     </thead>

        @foreach (var item in Model)
        {
            using (Html.BeginForm("deletecategory", "Expense", new { id = item.CategoryId }, FormMethod.Get))
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Cexpense_limit</td>
                    <td>
                        <a href="@Url.Action("EditCategory", new { id = item.CategoryId })" class="btn btn-success">Edit</a>
                        @*  <a href="@Url.Action("deletecategory", new { id = item.CategoryId })" class="btn btn-danger">Delete</a>*@
                        <input type="submit" class="btn btn-danger" value="Delete" onclick="return confirm('Are you sure want to delete @item.CategoryName Category ');" />
                    </td>
                </tr>
            }
        }
</table>
