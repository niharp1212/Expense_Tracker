@model Expense.Models.ExpenseData

@{
    ViewBag.Title = "ExpenseC";
}

<h2 class="text-center">Expense Add</h2>

<style>
    
</style>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        <strong>Success !</strong>@TempData["msg"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

@if (TempData["denger"] != null)
{
    <div class="alert alert-danger">
        <strong></strong>@TempData["denger"]
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

@using (Html.BeginForm("AddExpense", "Expense", FormMethod.Post))
{
    <div class="container">

        <div class="form-group">
            <label>Title</label>
            @Html.ValidationMessageFor(x => x.Title, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Description</label>
            @Html.ValidationMessageFor(x => x.Description, "", new { @class = "error" })
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Amount</label>
            @Html.ValidationMessageFor(x => x.Amount, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Category Name</label>
            @Html.ValidationMessageFor(x => x.CategoryId, "", new { @class = "error" })
            @Html.DropDownList("CategoryId", null, new { @class = "form-control" })
        </div>

        <div class="form-grou" style="display:none;">
            <label>Date Time</label>
            @Html.TextBox("Date", DateTime.Now, new { @disabled = "disabled", @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </div>
}


